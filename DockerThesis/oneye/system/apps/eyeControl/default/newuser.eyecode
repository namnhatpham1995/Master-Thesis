		$path = EYE_ROOT . '/' . GROUPS_DIR . '/' . $group . '/';
		if (vfs('real_fileExists',array($path)) && vfs('isdir',array($path)) && $group != DEFAULT_GROUP) {
// Groups checkbox
			$myCheckBox = new Checkbox(array(
				'name' => 'eyeControl_newuser_checkbox_group_' . $group,
