global $currentUser;

$path = um('getUserDir', array($currentUser));
$path .= CONF_USER_DIR .'/'. eyePictures;

$oldUser = $currentUser;
$currentUser = ROOTUSER;
if(!file_exists($path)){
	vfs('real_mkDir', array($path));
}

$file = $path .'/conf.xml';
if (file_exists($file)) {
	$config=eyeXML('getXMLconfig', array('eyePictures', 'conf.xml'));
} else {
	$config['eyePictures'][0]['slideShowDelay'][0] = 5;
	$config['eyePictures'][0]['goToFullScreen'][0] = 0;
	eyeXML('setXMLconfig',array('eyePictures','conf.xml',$config));
}
$currentUser = $oldUser;

$Y=10;
$X=20;
$y=9;
$x=160;
$myLabel0 = new Label(array(
	'name' => 'eyeControl_eyePictures_topic0',
	'father' => $eyeContainer,
	'x' => $X,
	'y' => $Y,
	'text' => 'Edit your eyePictures slideshow related settings'
));
$myLabel0->show();
$myLabel0->setCSS(array('font-weight' => 'bolder'));

$Y+=40;
$y+=40;
$myLabel3 = new Label(array(
	'name' => 'eyeControl_eyePictures_slideShowTime',
	'father' => $eyeContainer,
	'x' => $X,
	'y' => ($Y - 6),
	'text' => 'Seconds to wait between every picture'
));
$myLabel3->show();
eyex('rawjs', array('js' => 'document.getElementById("' . $myPid . '_eyeControl_eyePictures_slideShowTime").style.width = "130px";'));

$Y+=44;
$myLabel1 = new Label(array(
	'name' => 'eyeControl_eyePictures_fullScreen',
	'father' => $eyeContainer,
	'x' => $X,
	'y' => ($Y + 3),
	'text' => 'Set Fullscreen'
));
$myLabel1->show();

$myRadioYfullScreen= new Radio(array(
	'checked' => $config['eyePictures'][0]['goToFullScreen'][0] == 1,
	'father' => $eyeContainer,
	'group' => 'fullScreen',
	'name' => 'eyeControl_eyePictures_YfullScreen_radio',
	'text' => 'Yes',
	'x' => $x-3,
	'y' => $Y-1
));
$myRadioYfullScreen->show();

$myRadioNfullScreen = new Radio(array(
	'checked' => $config['eyePictures'][0]['goToFullScreen'][0] == 0,
	'father' => $eyeContainer,
	'group' => 'fullScreen',
	'name' => 'eyeControl_eyePictures_NfullScreen_radio',
	'text' => 'No',
	'x' => $x+47,
	'y' => $Y-1
));
$myRadioNfullScreen->show();

$myTextBox3 = new Textbox (array(
	'name' => 'eyeControl_eyePictures_slideShowTime_txtBox',
	'father' => $eyeContainer,
	'width' => 20,
	'x' => $x,
	'y' => $y,
	'text' => $config['eyePictures'][0]['slideShowDelay'][0]
));
$myTextBox3->show();

$myButton = new Button (array(
	'name' => 'eyeControl_eyePictures_save_button',
	'father' => $eyeContainer,
	'caption' => 'Save',
	'signal' => 'save',
	'x' => 40,
	'y' => $Y+57
));
$myButton->addFriend($myTextBox3);
$myButton->addFriend($myRadioNfullScreen);
$myButton->addFriend($myRadioYfullScreen);
$myButton->show();


