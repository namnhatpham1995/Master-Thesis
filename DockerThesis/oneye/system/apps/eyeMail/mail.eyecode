		'name'=>'myBarCompose',
		'father'=>'eyeMail_Compose_Content'
	));
	if(!empty($body)) {
		$myTextArea->focus();
	}
	$myToolbar->show();
	if($recv == 0) {
		$myToolbar->addItem('sendMail','index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/22x22/message_restore.png','Send',array($myTextArea,$toTextbox,$ccTextbox,$ccoTextbox,$sbjTextbox));
		$myToolbar->addLine();
		$myToolbar->addItem('attachMail','index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/22x22/mail-attach.png','Attach');
	} else {
		$myToolbar->addItem('reply','index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/22x22/mail-reply-sender.png','Reply');
		$myToolbar->addItem('forward','index.php?theme=' . $_SESSION['usertheme'] . '&extern=icons/22x22/mail-forward.png','Forward');
	}
}

