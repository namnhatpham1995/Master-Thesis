function eyeMessages_run($params=null) {
	global $myPid, $checknum;
	//Check if the user has the needed directories
	if(!vfs('isdir', array(um('getCurrentUserDir').CONF_USER_DIR.'/eyeMessages/'))) {
		eyeMessages('start');
	}

