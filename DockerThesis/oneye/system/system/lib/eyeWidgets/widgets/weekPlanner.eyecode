		$widgetsparams = array(
			'pid' => $this->pid,
			'hourWidth' => $this->hourWidth,
			'rowHeight' => $this->rowHeight,
			'width' => $this->width,
			'title' => $this->title,
			'dayFrom' => $this->dayFrom,
			'dayEven' => $this->dayEven,
			'hourFrom' => $this->hourFrom,
			'hourEven' => $this->hourEven,
			'weekDays' =>$weekDaysJs,
			'parts'=>$this->parts,
			'startMonday'=>$this->startMonday,
			'defaultEvenText'=>$defaultEvenText,
			'calendarsText'=>$calendarsText,
			'selectedCalendar'=>$this->selectedCalendar
		);
		$widgetsparams = mmap('array2js',array($widgetsparams));

		$week = array(
			'name' => $this->name,
			'x' => $this->x,
			'y' => $this->y,
			'horiz' => $this->horiz,
			'vert' => $this->vert,
			'father' => $this->father,
			'widgetname' => 'weekPlanner',
			'params' => $widgetsparams,
			'center' => $this->cent
		);
		$this->showed=1;
		eyex('createWidget',$week);
		eyeWidgets('serialize',array($this));
	}

