//Private function
function _move_message($from, $to) {
	if(empty($from) || empty($to)) {
		return;
	}

	$hash = basename($from);

	while(vfs('real_fileExists',array($to.$hash.'.msgSwap'))) {
		$hash = md5(uniqid(time()));
	}
	vfs('real_move', array($from.'.msgSwap', $to.$hash.'.msgSwap'));
}

